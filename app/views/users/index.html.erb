<h1>All Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.username %>
      </td>

      <td>
        <% if user.private %>
          Yes
        <% else %>
          No
        <% end %>
      </td>

      <td>
        <% if !user.private %>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
